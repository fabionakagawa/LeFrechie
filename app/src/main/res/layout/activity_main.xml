<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    tools:context="com.example.ueno.lefrechie.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingTop="8dp"
        android:gravity="center"
        android:layout_weight="6">

        <ImageButton
            android:id="@+id/logoInicial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/logopreto"
            android:background="#00ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Pedidos"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/font_size"
            android:textColor= "@color/White"
            android:background="@drawable/main"/>
        <TextView
            android:id="@+id/pedidosAberto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Pedidos em Aberto"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/font_size"
            android:textColor= "@color/White"
            android:background="@drawable/main"/>
        <TextView
            android:id="@+id/relatorioDiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Relatório Diário"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/font_size"
            android:textColor= "@color/White"
            android:background="@drawable/main"/>
        <TextView
            android:id="@+id/produtos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Produtos"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/font_size"
            android:textColor= "@color/White"
            android:background="@drawable/main"/>

    </LinearLayout>


</LinearLayout>
